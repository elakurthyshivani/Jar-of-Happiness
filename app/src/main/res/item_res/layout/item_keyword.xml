<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/rounded_corners_20dp"
    android:backgroundTint="@color/greyE"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="center">

    <TextView
        android:id="@+id/keyword_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        style="@style/ComicNeue16Style"
        android:textColor="@color/light_sea_green"
        android:paddingEnd="8dp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:layout_width="24sp"
        android:layout_height="24sp"
        android:padding="4sp"
        android:src="@drawable/close_grey_c"
        android:background="@drawable/circle_white"
        android:elevation="1dp"
        android:contentDescription="@string/remove_keyword"
        android:tooltipText="@string/remove_keyword"
        android:onClick="removeKeyword"
        tools:targetApi="o" />

</LinearLayout>