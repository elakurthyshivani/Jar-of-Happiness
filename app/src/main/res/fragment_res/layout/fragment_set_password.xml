<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners_10dp"
        android:elevation="1dp"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/current_password_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Black13BTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/current_password_mini"
            app:layout_constraintTop_toTopOf="@id/current_password_title"
            app:layout_constraintLeft_toRightOf="@id/current_password_title"
            app:layout_constraintBottom_toBottomOf="@id/current_password_title"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title"
            android:src="@drawable/password_mini" />

        <EditText
            android:id="@+id/current_password_input"
            app:layout_constraintTop_toBottomOf="@id/current_password_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/ComicNeue18Style"
            android:inputType="textPassword"
            android:hint="@string/password_hint_2"
            android:maxLength="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_neue"
            android:textColor="@color/aqua_blue"
            android:background="@color/transparent"
            android:autofillHints="" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners_10dp"
        android:elevation="1dp"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/new_password_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Black13BTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/new_password_mini"
            app:layout_constraintTop_toTopOf="@id/new_password_title"
            app:layout_constraintLeft_toRightOf="@id/new_password_title"
            app:layout_constraintBottom_toBottomOf="@id/new_password_title"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title"
            android:src="@drawable/password_mini" />

        <EditText
            android:id="@+id/new_password_input"
            app:layout_constraintTop_toBottomOf="@id/new_password_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/ComicNeue18Style"
            android:inputType="textPassword"
            android:hint="@string/password_hint_2"
            android:maxLength="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_neue"
            android:textColor="@color/aqua_blue"
            android:background="@color/transparent"
            android:autofillHints="" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_corners_10dp"
        android:elevation="1dp"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/reenter_password_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/Black13BTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/reenter_password_mini"
            app:layout_constraintTop_toTopOf="@id/reenter_password_title"
            app:layout_constraintLeft_toRightOf="@id/reenter_password_title"
            app:layout_constraintBottom_toBottomOf="@id/reenter_password_title"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="4dp"
            android:scaleType="fitCenter"
            android:contentDescription="@string/title"
            android:src="@drawable/password_mini" />

        <EditText
            android:id="@+id/reenter_password_input"
            app:layout_constraintTop_toBottomOf="@id/reenter_password_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/ComicNeue18Style"
            android:inputType="textPassword"
            android:hint="@string/password_hint_2"
            android:maxLength="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comic_neue"
            android:textColor="@color/aqua_blue"
            android:background="@color/transparent"
            android:autofillHints="" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>